#!/usr/bin/env node

const meow = require('meow');
const chalk = require('chalk');
const ine = require('..');

const icoMark = chalk.green('✔');

const cli = meow(`
  使用:
    $ ine <cmd>

  选项:
    -h, --help     显示帮助信息
    -v, --version  显示版本信息

  命令:
    ls [-a, --all]        列出 LTS 版本 (-a 所有版本)
    install, i [version]  安装指定版本
    uninstall, uni        卸载安装目录

  例子
    $ ine ls
    ${icoMark} 以下是LTS可安装的版本:
      v12.18.2 lts
      v10.21.0 lts
      ...
    $ ine ls -a
    ${icoMark} 以下是所有可安装的版本:
      14.5.0
      14.4.0
      ...
    $ ine i 12
    ${icoMark} node v10.21.0 完成！
    $ ine uni
    ${icoMark} 删除成功！
  \n
`, {
	alias: {
    h: 'help',
    v: 'version',
	}
});

if (cli.input.length === 0) {
  cli.showHelp();
} else {
  const [cmd, ver] = cli.input;
  if (cmd === 'ls') {
    ine.showList(cli.flags.all || cli.flags.a);
  } else if (cmd === 'i' || cmd === 'install') {
    ine.install(ver);
  } else if (cmd === 'uni' || cmd === 'uninstall') {
    ine.uninstall(ver);
  } else {
    cli.showHelp();
  }
}
